@model PatrocinioZoneProyectoV1.Models.Oferta

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-5">Crear</h1>

<h4>Oferta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatrocinadorID" class="control-label"></label>
                @* <input asp-for="PatrocinadorID" class="form-control" /> *@
                <select asp-for="PatrocinadorID" class="form-control" asp-items="ViewBag.PatrocinadorID"></select>
                <span asp-validation-for="PatrocinadorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Costo" class="control-label"></label>
                <input asp-for="Costo" class="form-control" />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubID" class="control-label"></label>
                <select asp-for="ClubID" class="form-control" asp-items="ViewBag.ClubID"></select>
                @* <input asp-for="ClubID" class="form-control" /> *@
                <span asp-validation-for="ClubID" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label for="ZonaPatrocinio">Seleccione una zona de patrocinio:</label>
                <div>
                    @foreach (var zona in (IEnumerable<PatrocinioZoneProyectoV1.Models.ZonaPatrocinio>)ViewData["ZonaPatrocinioId"])
                    {
                        <div class="form-check">
                            <input type="radio" class="form-check-input" id="zona-@zona.Id" name="ZonaDePatrocinioID" value="@zona.Id" />
                            <label class="form-check-label" for="zona-@zona.Id">
                                @zona.Id - @zona.Tamanio - @zona.Ubicacion
                            </label>
                        </div>
                    }
                </div>
            </div>




               @*  <label asp-for="ZonaDePatrocinioID" class="control-label"></label> *@

               @*  <select asp-for="ZonaDePatrocinioID" class="form-control" asp-items="ViewBag.ZonaDePatrocinioID"></select>
                <input asp-for="ZonaDePatrocinioID" class="form-control" />  *@


                @* @foreach (var zona in (IEnumerable<PatrocinioZoneProyectoV1.Models.ZonaPatrocinio>)ViewData["ZonaPatrocinioId"])
