@{
    ViewData["Title"] = "Home Page";
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

}

<div class="text-center">
    <h1 class="display-4">Welcome to PatrocinioZone</h1>
    <p class="lead text-center">Conectamos clubes deportivos con patrocinadores para crear oportunidades de éxito mutuo. ¡Explora, negocia y haz crecer tu marca!</p>
    @* <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
</div>


<!-- Carrusel de Patrocinadores -->
<div id="carouselPatrocinadores" class="carousel slide mt-5" data-ride="carousel">
    <h2 class="text-center">Nuestros Patrocinadores</h2>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="@Url.Content("~/images/adidas.png")" class="carousel-image" alt="Patrocinador 1">
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/images/bzrp.png")" class="carousel-image" alt="Patrocinador 2">
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/images/nike.png")" class="carousel-image" alt="Patrocinador 3">
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/images/espndeportes.png")" class="carousel-image" alt="Patrocinador 4">
        </div>
     
    </div>
    <a class="carousel-control-prev" href="#carouselPatrocinadores" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#carouselPatrocinadores" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Siguiente</span>
    </a>
</div>

<!-- Carrusel de Clubes -->
<div id="carouselClubes" class="carousel slide mt-5" data-ride="carousel">
    <h2 class="text-center">Clubes Asociados</h2>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="@Url.Content("~/images/afa.png")" " class="carousel-image" alt="Club 1">
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/images/losangeles.png")" class="carousel-image" alt="Club 2">
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/images/cadda.png")" class="carousel-image" alt="Club 3">
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/images/colapinto.png")" class="carousel-image" alt="Club 4">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselClubes" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#carouselClubes" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Siguiente</span>
    </a>
</div>

